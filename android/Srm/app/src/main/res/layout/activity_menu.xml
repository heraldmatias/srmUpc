<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.falcotech.srm.MenuActivity"
    android:baselineAligned="true"
    android:background="#ff24b7ff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff85ffff"
        android:clickable="false"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:transitionGroup="false">

        <ImageView
            android:id="@+id/widget45"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:src="@drawable/location"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_activity_home"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center_horizontal">


            <ImageButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:id="@+id/btnPago"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pay_option"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pago"
                android:textSize="30dp"
                android:id="@+id/textPago"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/btnMapa"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/map_option"
                android:scaleType="fitXY"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mapa"
                android:textSize="30dp"
                android:id="@+id/textMap"
                android:layout_gravity="center_horizontal" />
            <ImageButton
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:id="@+id/btnTiempo"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/time_option"
                android:background="@null"
                android:scaleType="fitXY"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tiempo"
                android:textSize="30dp"
                android:id="@+id/textTiempo"
                android:layout_gravity="center_horizontal" />

            <ImageButton
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:id="@+id/btnSalir"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/exit_option"
                android:scaleType="fitXY"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Salir"
                android:textSize="30dp"
                android:id="@+id/textSalir"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
