<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff24b7ff"
    android:baselineAligned="true"
    android:orientation="vertical"
    tools:context="com.falcotech.srm.PagoActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ff85ffff"
        android:clickable="false"
        android:padding="15dp"
        android:textAlignment="center"
        android:transitionGroup="false">

        <ImageView
            android:id="@+id/widget45"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_activity_home"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="100dp"
                android:columnCount="2">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:padding="5dp"
                    android:text="Servicio Transporte"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff070707" />


                <Spinner
                    android:id="@+id/spServicio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="right"
                    android:layout_row="0"
                    android:spinnerMode="dialog" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:padding="5dp"
                    android:text="@string/label_price"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff070707" />

                <EditText
                    android:id="@+id/txtMonto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:ems="10"
                    android:hint="@string/hint_price"
                    android:inputType="number"
                    android:text="" />


                <EditText
                    android:id="@+id/txtNumeroTarjeTransporte"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="9"
                    android:ems="10"
                    android:hint="@string/hint_card_number"
                    android:inputType="number"
                    android:text="" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="9"
                    android:padding="5dp"
                    android:text="@string/label_card_service"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff070707" />


                <Button
                    android:id="@+id/btnRecarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="15dip"
                    android:layout_row="10"
                    android:text="@string/action_pay" />


                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="30dip"
                    android:layout_row="10"
                    android:text="@string/action_pay_cancel" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
