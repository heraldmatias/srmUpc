<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.falcotech.srm.PagoActivity"
    android:baselineAligned="true"
    android:background="#ff24b7ff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff85ffff"
        android:clickable="false"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:transitionGroup="false"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/widget45"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_bar_stacked_max_height"
            android:src="@drawable/location"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_activity_home"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center_horizontal">
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
            android:columnCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Servicio Transporte"
                android:id="@+id/textView2"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="5dp"
                android:textColor="#ff070707" />


            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spServicio"
                android:layout_row="0"
                android:layout_column="1"
                android:spinnerMode="dialog"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Banco"
                android:id="@+id/textView3"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="5dp"
                android:textColor="#ff070707" />


            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spBanco"
                android:layout_row="1"
                android:layout_column="1"
                android:spinnerMode="dialog"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cuenta"
                android:id="@+id/textView4"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_row="3"
                android:layout_column="0"
                android:padding="5dp"
                android:textColor="#ff070707" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Monto S/."
                android:id="@+id/textView5"
                android:layout_row="5"
                android:padding="5dp"
                android:textColor="#ff070707"
                android:layout_column="0" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/TxtNumeroCuenta"
                android:layout_row="3"
                android:layout_column="1"
                android:hint="Número de Cuenta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:hint="Cod. Verificación"
                android:id="@+id/textView6"
                android:layout_row="6"
                android:padding="5dp"
                android:textColor="#ff070707"
                android:layout_column="0" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtMonto"
                android:layout_row="5"
                android:layout_column="1"
                android:text=""
                android:hint="Monto a Cargar" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtCodVer"
                android:layout_row="6"
                android:layout_column="1"
                android:text=""
                android:hint="Cod. Verificación" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fec. Vencimiento"
                android:id="@+id/textView7"
                android:layout_row="7"
                android:padding="5dp"
                android:textColor="#ff070707"
                android:layout_column="0" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtNumeroTarjeTransporte"
                android:layout_row="9"
                android:layout_column="1"
                android:text=""
                android:hint="Número de Tarjeta"  />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_row="7"
                android:layout_column="1">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/dateMes" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/dateAnno" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tarjeta Transporte"
                android:id="@+id/textView8"
                android:layout_row="9"
                android:padding="5dp"
                android:textColor="#ff070707"
                android:layout_column="0" />




            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recargar Tarjeta"
                android:id="@+id/btnRecarga"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="15dip" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar Recarga"
                android:id="@+id/btnCancelar"
                android:layout_row="10"
                android:layout_column="1"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="35dip" />

        </GridLayout>

    </LinearLayout>
    </ScrollView>




</RelativeLayout>
